{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    // "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": "warn",
    "no-redeclare": "error",
    "no-dupe-keys": "error",
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    // "capitalized-comments": ["error"],
    // "multiline-comment-style": ["error", "starred-block"],
    "no-return-await": "error",
    "no-var": "error",
    "prefer-const": "error",
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }
    ]
  },
  "ignorePatterns": ["src/index.js"]
}
